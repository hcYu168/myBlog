    <script type="text/javascript">
       // var content = UE.getEditor('editor').getContent();
        $(document).ready(function(){
            $("#upload").click(function(){
                var img = '';
                var img_src = $("#img")[0].src;
                var new_img = $("#new_img").val();
                if(new_img == ""){
                    img = img_src;
                    $.ajax({
                        url: "/blog/dashboard/article/<%= article_detail.id%>",
                        type: "PUT",
                        data:{
                            "title": $("#title").val(),
                            "segment" : $("#segment").val(),
                            "content": UE.getEditor('editor').getContent()
                        },
                        //processData: false,
                        //contentType: false,
                        success: function(data){
                            alert("上传成功");
                            if(data.info){
                                window.location.href = "/blog/dashboard/article";
                            }
                        },
                        error: function(err){
                            console.log(err);
                        }
                    });
                }else{
                    var img = document.getElementById("new_img");
                    var formData = new FormData();
                    formData.append("img", img);
                    formData.append("title", $("#title").val());
                    formData.append("segment", $("#segment").val());
                    formData.append("content", UE.getEditor('editor').getContent());
                    $.ajax({
                        url: "/blog/dashboard/article/<%= article_detail.id%>",
                        type: "PUT",
                        data: formData,
                        processData: false,
                        contentType: false,
                        success: function(data){
                            alert("上传成功");
                            if(data.info){
                                window.location.href = "/blog/dashboard/article";
                            }
                        },
                        error: function(err){
                            console.log(err);
                        }
                    });
                }
            })
        });  
    </script>
